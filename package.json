{
  "name": "elevenmarsbars-website",
  "description": "The elevenmarsbars.com website",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/elevenmarsbars/elevenmarsbars.com"
  },
  "bugs": {
    "url": "https://github.com/elevenmarsbars/elevenmarsbars.com/issues"
  },
  "devDependencies": {
    "generator-h5bp": "^1.2.1",
    "html-validator": "0.0.8",
    "modularscale-sass": "^2.1.1",
    "mustache": "^2.1.3",
    "node-sass": "^3.2.0",
    "nodemon": "^1.4.0",
    "yo": "^1.4.7"
  },
  "scripts": {
    "css": "./build-css",
    "html": "mustache data.json layout.mustache > index.html",
    "watch:html": "nodemon -w layout.mustache -w data.json -x 'npm run html'",
    "watch:css": "node-sass -w --precision 10 scss/main.scss css/main.css",
    "watch": "npm run watch:html & npm run watch:css",
    "compile": "npm run html && npm run css",
    "validate": "html-validator --file index.html",
    "test": "npm run compile && npm run validate"
  },
  "author": "Anshuman Bhaduri",
  "license": "MIT"
}
